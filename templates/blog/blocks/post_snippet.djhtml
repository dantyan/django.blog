
<div class="post-list">
	{% for post in posts %}
		<div class="post-list-item item-post" id="post-{{ post.id }}">		
			<h2 class="post-title"><a href="{{ post.get_absolute_url }}">{{ post.title }}</a></h2>
			<div class="post-list-content">{{ post.content }}</div>
		</div>
	{% empty %}
		<p>no posts</p>
	{% endfor %}
</div>